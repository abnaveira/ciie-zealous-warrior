    <!--Scenery-->
    <scenery>
        <file>decorado.png</file>
        <!--Scaling of the image (use 0 if no scaling needed)-->
        <scaleX>1200</scaleX>
        <scaleY>600</scaleY>
        <!--Size of the window-->
        <windowWidth>800</windowWidth>
        <windowHeight>600</windowHeight>
        <!--Minimum distance to the sides-->
        <leftMin>50</leftMin>
        <topMin>50</topMin>
        <backgroundColor>
            <r>0</r>
            <g>255</g>
            <b>255</b>
