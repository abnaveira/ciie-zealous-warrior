    </scenery>

    <!--Images that go in front of the player-->
    <frontImages>
        <frontImage>
            <file>image.jpg</file>
            <!--To use the same image with different scaling in different positions-->
            <scaleAndPlacements>
                <scaleAndPlacement>
                    <!--Scale of the image (use 0 if no scaling needed)-->
                    <scaleX>0</scaleX>
                    <scaleY>0</scaleY>
                    <!--Position of the image-->
                    <x>200</x>
                    <y>551</y>
                </scaleAndPlacement>
            </scaleAndPlacements>
        </frontImage>
    </frontImages>

    <!--Animations that go in front of sprites-->
    <frontAnimations>
        <frontAnimation>
            <frames>
                <frame>
                    <file>images/flame_a_0001.png</file>
